<%- include('partials/header') %>

<section class="events container my-5">
    <h2 class="text-center mb-4">Upcoming Events</h2>
    <div class="row">
        <% if (events.length > 0) { %>
            <% events.forEach(function(event) { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="<%= event.banner_image || 'default-banner.jpg' %>" class="card-img-top" alt="Event Image">
                        <div class="card-body">
                            <h3 class="card-title"><%= event.title %></h3>
                            <p class="card-text"><strong>Category:</strong> <%= event.category %></p>
                            <p class="card-text"><strong>Description:</strong> <%= event.description %></p>
                            <p class="card-text"><strong>Start Time:</strong> <%= new Date(event.start_time).toLocaleString() %></p>
                            <p class="card-text"><strong>End Time:</strong> <%= new Date(event.end_time).toLocaleString() %></p>
                            <p class="card-text"><strong>Location:</strong> <%= event.location %></p>
                            <p class="card-text"><strong>Registration Deadline:</strong> <%= new Date(event.registration_deadline).toLocaleString() %></p>
                            <a href="/event/<%= event.id %>" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p>No events scheduled at the moment. Please check back later.</p>
        <% } %>
    </div>
</section>

<%- include('partials/footer') %>

