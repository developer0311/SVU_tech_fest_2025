<%- include('partials/header') %>

    <section class="profile">
        <div class="greeting-section bottom">
            <h1>Welcome, <%= user.fname %>
                    <%= user.lname %>!</h1>
            <p>Get ready to dive into the future of tech!</p>
            <p>Here's what's happening in your tech journey:</p>
            <div class="exciting-tech-lines">
                <p>ðŸš€ You are shaping the future with every event you attend!</p>
                <p>ðŸ’» Your next big breakthrough might be just around the corner!</p>
                <p>ðŸ”§ Keep building, keep innovating â€“ the world is waiting!</p>
            </div>
        </div>

        <div class="user-events bottom">
            <h2>Your Registered Events</h2>
            <% if (events.length> 0) { %>
                <div class="event-cards">
                    <% events.forEach(function(event) { %>
                        <div class="event-card">
                            <div class="event-card-header">
                                <h3>
                                    <%= event.name %>
                                </h3>
                                <p>Event Date: <%= event.event_date %>
                                </p>
                            </div>
                            <div class="event-card-body">
                                <p>
                                    <%= event.description %>
                                </p>
                                <p><strong>Location:</strong>
                                    <%= event.location %>
                                </p>
                                <p><strong>Status:</strong>
                                    <%= event.status %>
                                </p>
                            </div>
                        </div>
                        <% }); %>
                </div>
                <% } else { %>
                    <p>You haven't registered for any events yet. Explore and join exciting tech events!</p>
                    <% } %>
        </div>
    </section>

    <script src="https://unpkg.com/scrollreveal"></script>

    <script>
        // Scroll reveal

        ScrollReveal({
            reset: true,
            distance: "60px",
            duration: 2000,
            delay: 200
        });

        ScrollReveal().reveal('.top', { origin: `top` });
        ScrollReveal().reveal('.bottom', { origin: `bottom` });
        ScrollReveal().reveal('.left', { origin: `left` });
        ScrollReveal().reveal('.right', { origin: `right` });
    </script>

