<%- include('partials/header') %>

  <div class="container col-sm-9 col-lg-6 mt-5">
    <h1>Login</h1>

    <div class="row justify-content-center form-row">
      <div class="col-sm-12 l-g-form">
        <div class="card">
          <div class="card-body">

            <!-- Makes POST request to /login route -->
            <form action="/login" method="POST">
              <div class="form-group left">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" name="username" placeholder="Enter your email">
              </div>
              <div class="form-group right">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" name="password" placeholder="Enter your password">
              </div>
              <button type="submit" class="btn btn-dark">Login</button>
            </form>
            <p class="forgot-password"><a href="/reset-password">Forgot Password</a></p>

          </div>
        </div>
      </div>

      <div class="col-sm-12" style="display: none;">
        <div class="card">
          <div class="card-body">
            <a class="btn btn-block" href="/auth/google" role="button">
              <img src="images/google.png" alt="">
              Sign In with Google
            </a>
          </div>
        </div>
      </div>

    </div>
  </div>

  <script src="https://unpkg.com/scrollreveal"></script>
  <script>
    ScrollReveal({
      reset: true,
      distance: "60px",
      duration: 2000,
      delay: 200
    });

    ScrollReveal().reveal('', { origin: `top` });
    ScrollReveal().reveal('', { origin: `bottom` });
    ScrollReveal().reveal('.left, .btn-dark', { origin: `left` });
    ScrollReveal().reveal('h1, .right, .forgot-password', { origin: `right` });
  </script>

  <%- include('partials/footer') %>